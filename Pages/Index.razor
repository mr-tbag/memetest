        if (trava == "Нет")
        {
            Score += 10;
        }
        if (trava == "Иногда")
        {
            Score += 5;
        }
        if (odin == "Да")
        {
            Score += 10;
        }
        if (zjech == "Да")
        {
            Score += 10;
        }
        if (dva == "1939")
        {
            Score += 10;
        }
    }
}