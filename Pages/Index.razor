    string trava = "aa";
    string dva = "aa";
    string zjech = "aa";
    string odin = "aa";
    string RazdP = "aa";
    string Geo = "aa";
    int? Score = null;
    private void RunTest()
    {
        Score = 0;
        if (RazdP == "Да")
        {
            Score += 10;
        }
        if (Geo == "Да")
        {
